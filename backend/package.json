{
  "name": "faceblog-backend-native",
  "version": "2.0.0",
  "description": "FaceBlog Backend API with Native PostgreSQL and JWT Authentication",
  "main": "src/server-native.js",
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc",
    "clean": "rmdir /s /q dist 2>nul || echo dist cleaned",
    "start": "node src/server-native.js",
    "debug": "node debug-automation.js",
    "debug:watch": "node debug-automation.js --watch",
    "dev": "nodemon --exec ts-node -r tsconfig-paths/register src/scripts/start.ts",
    "migrate": "ts-node src/scripts/migrate.ts",
    "migrate:up": "npm run migrate up",
    "migrate:down": "npm run migrate down",
    "migrate:reset": "npm run migrate reset",
    "migrate:status": "npm run migrate status",
    "db:seed": "npm run migrate up",
    "migrate:vps": "psql -f vps-setup.sql",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "bcrypt": "^5.1.1",
    "cheerio": "^1.1.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^6.8.1",
    "express-validator": "^7.0.1",
    "sharp": "^0.32.6",
    "rss": "^1.2.2",
    "sitemap": "^7.1.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "nodemailer": "^6.9.4",
    "pg": "^8.11.3",
    "uuid": "^9.0.0",
    "validator": "^13.15.15",
    "xss": "^1.0.15"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.4.5",
    "@types/nodemailer": "^6.4.8",
    "@types/pg": "^8.10.2",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "eslint": "^8.45.0",
    "jest": "^29.6.1",
    "nodemon": "^3.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  },
  "keywords": [
    "blog",
    "multi-tenant",
    "saas",
    "nodejs",
    "typescript",
    "express",
    "postgresql"
  ],
  "author": "Sergio Castro",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
